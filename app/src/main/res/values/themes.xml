<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unsmoke" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/normal_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/normal_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/accent_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/normal_green</item>
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:navigationBarColor">@color/accent_white</item>
    </style>

    <!-- Custom style for TextInputLayout -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/normal_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialCalendarHeaderCancelButton">@style/CustomCancelButton</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <!-- Customize text field of the text input mode. -->
        <!--        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>-->
    </style>

    <style name="ThemeOverlay.App.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/normal_green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CustomCancelButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderCancelButton">
        <item name="android:textColor">@color/color_error</item> <!-- Set the desired color -->
        <item name="iconTint">@color/color_error</item> <!-- Set the desired color -->
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent_black</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextContent.Title">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.TitleSecondaryBlack">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.TitleSecondaryGreen">
        <item name="android:textColor">@color/normal_green</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.Description">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.DescriptionMedium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">15%</item>
        <item name="cornerSizeBottomRight">15%</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="Theme.Unsmoke.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Theme.Unsmoke.AppWidgetContainer" parent="Theme.Unsmoke.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

</resources>