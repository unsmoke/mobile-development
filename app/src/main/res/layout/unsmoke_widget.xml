<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Unsmoke.AppWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#2B9C6A"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="0dp"
        android:paddingTop="36dp"
        android:paddingEnd="64dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/widget_bg" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/widget_streak"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/streak_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/imageView"
        android:layout_alignTop="@id/imageView"
        android:layout_alignEnd="@id/imageView"
        android:layout_alignBottom="@id/imageView"
        android:gravity="center"
        android:includeFontPadding="true"
        android:paddingTop="12dp"
        android:text="15"
        android:textColor="@color/accent_white"
        android:textSize="42sp"
        android:textStyle="bold"/>

