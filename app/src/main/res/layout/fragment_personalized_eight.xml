<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/accent_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.personalizedplan.screen.PersonalizedEightFragment">

    <TextView
        android:id="@+id/tv_wake_up_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_time_do_you_wake_up"
        style="@style/TextContent.Title"
        android:textSize="19sp"
        android:textColor="@color/normal_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_wake_up_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_wake_up_time"
        app:startIconTint="@color/neutral_50"
        tools:layout_editor_absoluteY="16dp">

        <com.cpp.unsmoke.utils.customview.EditText
            android:id="@+id/edt_wake_up_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            tools:ignore="SpeakableTextPresentCheck"
            android:hint="@string/select_a_time_approximately" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_first_smoke_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_time_did_you_smoke_your_first_cigarette_after_waking_up"
        style="@style/TextContent.Title"
        android:textSize="19sp"
        android:textColor="@color/normal_green"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_wake_up_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_first_smoke_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_first_smoke_time"
        app:startIconTint="@color/neutral_50"
        tools:layout_editor_absoluteY="16dp">

        <com.cpp.unsmoke.utils.customview.EditText
            android:id="@+id/edt_first_smoke_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            tools:ignore="SpeakableTextPresentCheck"
            android:hint="@string/select_a_time_approximately" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.cpp.unsmoke.utils.customview.CustomButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/button_state"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>